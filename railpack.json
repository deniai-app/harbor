{
  "$schema": "https://schema.railpack.com",
  "buildAptPackages": [
    "git",
    "ca-certificates"
  ],
  "caches": {
    "bun": {
      "directory": "/root/.bun/install/cache",
      "type": "shared"
    }
  },
  "steps": {
    "install": {
      "commands": [
        "sh -c 'cd /app && bun install --frozen-lockfile --filter api'"
      ],
      "caches": [
        "bun"
      ]
    }
  },
  "deploy": {
    "startCommand": "bun run --filter api start",
    "aptPackages": [
      "git",
      "ca-certificates"
    ],
    "inputs": [
      {
        "step": "install",
        "include": [
          "."
        ]
      }
    ]
  }
}

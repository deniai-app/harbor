{
  "$schema": "https://schema.railpack.com",
  "buildAptPackages": [
    "git",
    "ca-certificates"
  ],
  "caches": {
    "bun": {
      "directory": "/root/.bun/install/cache",
      "type": "shared"
    }
  },
  "steps": {
    "install": {
      "commands": [
        {
          "cmd": "if [ -f /app/package.json ]; then cd /app; elif [ -f package.json ]; then cd .; elif [ -f /workspace/package.json ]; then cd /workspace; else cd .; fi && bun install --frozen-lockfile",
          "customName": "Install workspace dependencies"
        }
      ],
      "caches": [
        "bun"
      ]
    }
  },
  "deploy": {
    "startCommand": "bun run --filter api start",
    "aptPackages": [
      "git",
      "ca-certificates"
    ],
    "inputs": [
      {
        "step": "install",
        "include": [
          "."
        ]
      }
    ]
  }
}
